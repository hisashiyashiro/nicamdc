&ADMPARAM
    glevel      = 5,
    rlevel      = 0,
    vlayer      = 60,
    rgnmngfname = "rl00-prc10.info",
/

&GRDPARAM
    hgrid_io_mode = "ADVANCED",
    hgrid_fname   = "boundary_GL05RL00",
    VGRID_fname   = "vgrid60_dcmip.dat",
    topo_fname    = "NONE",
/

&TIMEPARAM
    DTL         = 1200.D0,
    INTEG_TYPE  = "TRCADV",
    LSTEP_MAX   = 72,
    start_year  = 1000,
    start_month = 1,
    start_day   = 1,
/

&RUNCONFPARAM
    RUNNAME        = 'DCMIP2012-12',
    NDIFF_LOCATION = 'IN_LARGE_STEP',
    CHEM_TYPE      = 'PASSIVE',
    THUBURN_LIM    = .true.
/

&BSSTATEPARAM
    ref_type = 'NOBASE',
/

&RESTARTPARAM
    input_io_mode     = 'IDEAL',
    output_io_mode    = 'ADVANCED',
    output_basename   = 'restart_all_GL05RL00z40',
    restart_layername = 'ZS60DCMIP',
/

##### DCMIP 2012 tracer advection test 1-2: 3D Hadley-like meridional circulation
&DYCORETESTPARAM
    init_type = 'Traceradvection',
    test_case = '2'
/

&CNSTPARAM
    earth_radius      = 6.37122D+6,
    earth_angvel      =   7.292D-5,
    earth_gravity     = 9.80616D0,
    gas_cnst          =   287.0D0,
    specific_heat_pre =  1004.5D0,
/

&NUMFILTERPARAM
    hdiff_type        = 'DIRECT',
    lap_order_hdiff   = 2,
    gamma_h           = 1.20D16,
    Kh_coef_minlim    = 0.D0,
    Kh_coef_maxlim    = 9.9D99,
    divdamp_type      = 'DIRECT',
    lap_order_divdamp = 2,
    alpha_d           = 1.20D16,
/

&EMBUDGETPARAM
    MNT_ON   = .true.,
    MNT_INTV = 3     ,
/

&NMHISD
    output_io_mode   = 'ADVANCED' ,
    histall_fname    = 'history'  ,
    hist3D_layername = 'Z60DCMIP',
    DIRECT_ACCESS    = .true.     ,
    NO_VINTRPL       = .false.    ,
    output_type      = 'SNAPSHOT' ,
    step             = 3          ,
    doout_step0      = .true.     ,
/

&NMHIST item='ml_u',        file='u',     ktype='3D' /
&NMHIST item='ml_v',        file='v',     ktype='3D' /
&NMHIST item='ml_w',        file='w',     ktype='3D' /
