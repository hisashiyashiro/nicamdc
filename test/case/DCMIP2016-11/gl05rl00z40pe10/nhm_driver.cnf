    earth_angvel        =   7.292D-5,
    small_planet_factor =      1.D0,
    earth_gravity       = 9.80616D0,
    gas_cnst            =   287.0D0,
    specific_heat_pre   =  1004.5D0,
/

&NUMFILTERPARAM
