VPATH_SHARE = share:share/io:
PRJ_SHARE   =
LIB_SHARE   = libnicamshare.a

MODS_SHARE =	\
	mod_precision.o	\
	mod_io_param.o	\
	mod_stdio.o	\
	mod_process.o	\
	mod_prof.o	\
	mod_adm.o	\
	mod_random.o	\
	mod_const.o	\
	mod_calendar.o	\
	mod_vector.o	\
	mod_fio.o	\
	fio.o	\
	fiof.o	\
	$(mod_hio).o	\
	$(hio)	\
	mod_comm.o	\
	mod_grd.o	\
	mod_ideal_topo.o	\
	mod_gmtr.o	\
	mod_oprt.o	\
	mod_vmtr.o	\
	mod_time.o	\
	mod_gtl.o	\
	mod_vintrpl.o	\
	mod_latlon.o

mod_precision.o  : mod_precision.f90
mod_io_param.o   : mod_io_param.f90
mod_stdio.o      : mod_stdio.f90      mod_io_param.o
mod_process.o    : mod_process.f90    mod_precision.o mod_stdio.o
mod_prof.o       : mod_prof.f90       mod_precision.o mod_stdio.o mod_process.o
mod_random.o     : mod_random.f90     mod_precision.o mod_stdio.o mod_process.o
mod_const.o      : mod_const.f90      mod_precision.o mod_stdio.o mod_process.o
mod_calendar.o   : mod_calendar.f90   mod_precision.o mod_stdio.o mod_process.o
mod_vector.o     : mod_vector.f90     mod_precision.o mod_stdio.o mod_const.o

mod_adm.o        : mod_adm.f90        mod_precision.o mod_stdio.o mod_process.o
mod_comm.o       : mod_comm.f90       mod_precision.o mod_stdio.o mod_process.o mod_prof.o mod_adm.o
fio.o            : fio.c         fio.h fio_def.h
fiof.o           : fiof.c fiof.h fio.h fio_def.h
hio.o            : hio.c         hio.h hio_def.h poh5.h
hiof.o           : hiof.c hiof.h hio.h hio_def.h poh5.h
poh5.o           : poh5.c        poh5.h
mod_fio.o        : mod_fio.f90        mod_precision.o mod_io_param.f90 mod_stdio.o mod_process.o mod_prof.o mod_const.o mod_calendar.o mod_adm.o fio.o fiof.o
mod_hio.o        : mod_hio.f90        mod_precision.o mod_io_param.f90 mod_stdio.o mod_process.o mod_prof.o mod_const.o mod_calendar.o mod_adm.o $(hio)
mod_nohio.o      : mod_nohio.f90      mod_precision.o mod_io_param.f90 mod_stdio.o mod_process.o mod_prof.o mod_const.o mod_calendar.o mod_adm.o

mod_grd.o        : mod_grd.f90        mod_precision.o mod_stdio.o mod_process.o mod_prof.o mod_const.o mod_adm.o mod_vector.o mod_fio.o $(mod_hio).o mod_comm.o mod_ideal_topo.o
mod_ideal_topo.o : mod_ideal_topo.f90 mod_precision.o mod_stdio.o mod_process.o mod_prof.o mod_const.o mod_adm.o
mod_gmtr.o       : mod_gmtr.f90       mod_precision.o mod_stdio.o mod_process.o mod_prof.o mod_const.o mod_adm.o mod_vector.o mod_fio.o $(mod_hio).o mod_comm.o mod_grd.o
mod_oprt.o       : mod_oprt.f90       mod_precision.o mod_stdio.o mod_process.o mod_prof.o mod_const.o mod_adm.o              mod_fio.o $(mod_hio).o mod_comm.o mod_grd.o mod_gmtr.o
mod_vmtr.o       : mod_vmtr.f90       mod_precision.o mod_stdio.o mod_process.o mod_prof.o mod_const.o mod_adm.o                                     mod_comm.o mod_grd.o mod_gmtr.o mod_oprt.o

mod_time.o	: mod_time.f90 mod_precision.o mod_adm.o mod_prof.o mod_calendar.o
mod_gtl.o	: mod_gtl.f90 mod_precision.o mod_adm.o mod_prof.o mod_comm.o mod_gmtr.o mod_vmtr.o mod_const.o mod_grd.o
mod_vintrpl.o	: mod_vintrpl.f90 mod_precision.o mod_adm.o mod_prof.o mod_grd.o mod_const.o
mod_latlon.o	: mod_latlon.f90 mod_precision.o mod_adm.o mod_prof.o mod_const.o mod_vector.o mod_grd.o mod_oprt.o mod_comm.o mod_gmtr.o

$(NICAM_LIBDIR)/$(LIB_SHARE): $(BUILDDIR)/$(LIB_SHARE)
	$(INSTALL) $< $@
	@echo; echo "##### LIBRARY $(LIB_SHARE) is Installed Successfully #####"; echo

$(BUILDDIR)/$(LIB_SHARE): $(MODS_SHARE)
	$(AR) $(ARFLAGS) $@ $(patsubst %,$(BUILDDIR)/%,$(notdir $^))
	$(RANLIB) $@
